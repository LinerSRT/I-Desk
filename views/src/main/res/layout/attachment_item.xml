<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corner_background_light"
    android:elevation="4dp"
    android:layout_margin="@dimen/contentMarginHalf"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/attachmentThumb"
        android:layout_width="match_parent"
        android:padding="@dimen/contentMarginHalf"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/download_icon" />

    <com.liner.views.YSMarqueTextView
        android:id="@+id/attachmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_bottom"
        android:padding="@dimen/contentMarginHalf"
        android:shadowColor="#80000000"
        app:ys_type="Light"
        android:drawableEnd="@drawable/cancel_icon_white"
        android:text="Filename"
        android:textSize="@dimen/secondaryTextSize"
        android:gravity="center_vertical"
        android:textColor="#FFF" />


</RelativeLayout>