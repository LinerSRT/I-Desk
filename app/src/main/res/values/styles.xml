<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@color/color_background</item>
        <item name="backgroundColorSecondary">@color/color_background_secondary</item>
        <item name="textColor">@color/color_text</item>
        <item name="textColorDark">@color/color_text_dark</item>
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/color_primary_dark</item>
        <item name="colorSecondaryVariant">@color/color_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="disabledColor">@color/color_disable</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
    </style>


    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?backgroundColor</item>
        <item name="iconTint">?colorPrimaryDark</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/contentMarginHalf</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textSize">@dimen/secondaryTextSize</item>

    </style>



</resources>
