<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@color/window_background</item>
        <item name="backgroundColorSecondary">@color/window_background_dark</item>
        <item name="textColor">@color/text</item>
        <item name="textColorDark">@color/text_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/primary</item>
        <item name="disabledColor">@color/disabled</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="actionBarStyle">@style/AppTheme.AppBar</item>
        <item name="android:textColorTertiary">@color/primary</item>
    </style>
    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?backgroundColor</item>
        <item name="iconTint">?colorPrimaryDark</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/contentMarginHalf</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textSize">@dimen/secondaryTextSize</item>
    </style>
    <style name="AppTheme.AppBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextStyle">@style/AppTheme.AppBar.TextStyle</item>
    </style>
    <style name="AppTheme.AppBar.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@color/window_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/secondaryTextSize</item>
    </style>

</resources>
