<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundColorSecondary" format="color"/>
        <attr name="colorPrimary" format="color"/>
        <attr name="colorPrimaryDark" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textColorDark" format="color" />
        <attr name="disabledColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EditRegexTextView">
        <attr name="ertv_left_icon" format="integer|reference"/>
        <attr name="ertv_regex" format="string"/>
    </declare-styleable>


    <declare-styleable name="VideoPlayerView">
        <attr name="toFullScreenIcon" format="reference"/>
        <attr name="toBaseScreenIcon" format="reference"/>
        <attr name="playIcon" format="reference"/>
        <attr name="pauseIcon" format="reference"/>
        <attr name="seekBarProgressDrawable" format="reference"/>
        <attr name="seekBarThumb" format="reference"/>
        <attr name="currentPositionColor" format="color"/>
        <attr name="durationColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RecordView">
        <attr name="slide_to_cancel_text" format="string" />
        <attr name="slide_to_cancel_arrow" format="reference" />
        <attr name="slide_to_cancel_margin_right" format="dimension" />
        <attr name="slide_to_cancel_bounds" format="dimension" />
        <attr name="slide_to_cancel_arrow_color" format="color" />
        <attr name="counter_time_color" format="color" />

    </declare-styleable>

    <declare-styleable name="RecordButton">

        <attr name="mic_icon" format="reference" />

    </declare-styleable>
</resources>