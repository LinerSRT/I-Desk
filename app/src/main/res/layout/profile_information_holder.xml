<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/contentMarginHalf"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.liner.views.YSTextView
        android:id="@+id/profileInformationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/contentMarginHalf"
        android:textColor="#383838"
        android:textSize="@dimen/secondaryTextSize"
        app:ys_type="Light" />

    <com.liner.views.YSTextView
        android:id="@+id/profileInformationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#383838"
        android:textSize="@dimen/secondaryTextSize"
        app:ys_type="Bold" />
</LinearLayout>