<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_margin="@dimen/contentMarginHalf"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_roundRect_bottomLeftRadius="8dp"
        app:shape_roundRect_bottomRightRadius="8dp"
        app:shape_roundRect_topLeftRadius="8dp"
        app:shape_roundRect_topRightRadius="8dp">

        <ImageView
            android:id="@+id/imagePickerItemView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/color_background_secondary"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/request_background" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <CheckBox
        android:id="@+id/imagePickerCheckBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_background"
        android:layout_alignParentEnd="true"
        android:button="@drawable/imagepicker_check_drawable"
        android:elevation="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:checked="false" />
</RelativeLayout>