<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/requestCreatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/contentMarginHalf"
        android:layout_marginEnd="@dimen/contentMarginHalf"
        android:gravity="center"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/requestCreatorPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/requestCreatorName"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?textColor"
            android:textSize="@dimen/primaryTextSize"
            android:textStyle="bold" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/requestCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardsCornerRadius"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/requestLockedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/layoutTemp"
                android:layout_alignTop="@+id/layoutTemp"
                android:layout_alignEnd="@id/layoutTemp"
                android:layout_alignBottom="@+id/layoutTemp"
                android:background="#80000000"
                android:drawableTop="@drawable/lock_icon"
                android:padding="@dimen/contentMargin"
                android:gravity="center"
                android:text="Закрыта"
                android:textColor="@color/white"
                android:textSize="@dimen/primaryTextSizeLarge"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/layoutTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/requestAccentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.liner.i_desk.Utils.Views.VerticalTextView
                        android:id="@+id/requestTypeString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|right"
                        android:text="Сервис"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/secondaryTextSizeSmall"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/contentMarginHalf">

                        <TextView
                            android:id="@+id/requestName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="64dp"
                            android:text="Имя заявки"
                            android:textColor="?textColor"
                            android:textSize="@dimen/primaryTextSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/requestText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="64dp"
                            android:layout_marginBottom="@dimen/contentMargin"
                            android:text="Очень длинный текст заявки который придумал пользовабор букв безсмысленного значения"
                            android:textColor="?textColorDark"
                            android:textSize="@dimen/secondaryTextSizeSmall" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Дата создания"
                                android:textColor="?colorPrimaryDark"
                                android:textSize="@dimen/tipsTextSize" />

                            <TextView
                                android:id="@+id/requestTimeDeadline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="20.20.2002"
                                android:textColor="?textColorDark"
                                android:textSize="@dimen/tipsTextSize" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/requestTimeDeadlineProgress"
                            style="@android:style/Widget.Material.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="?disabledColor"
                            android:progress="32"
                            android:progressTint="?colorPrimaryDark" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/requestTimeCreation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="18.20.2002"
                                android:textColor="?textColorDark"
                                android:textSize="@dimen/tipsTextSize" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="Дедлайн"
                                android:textColor="#DF0000"
                                android:textSize="@dimen/tipsTextSize" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/requestDeadlineWarning"
                        android:layout_width="@dimen/contentHeight"
                        android:layout_height="@dimen/contentHeight"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/contentMargin"
                        android:layout_marginEnd="@dimen/contentMargin"
                        android:elevation="4dp"
                        android:src="@drawable/dead_line_warning_icon" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>