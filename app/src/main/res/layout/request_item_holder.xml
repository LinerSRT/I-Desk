<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requestCard"
    app:cardCornerRadius="@dimen/cardsCornerRadius"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/requestAccentLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/round_corner_left">

            <com.liner.i_desk.Utils.Views.VerticalTextView
                android:id="@+id/requestTypeString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сервис"
                android:gravity="bottom|right"
                android:textStyle="bold"
                android:textSize="@dimen/secondaryTextSizeSmall"
                android:textColor="@color/color_white"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/contentMarginHalf"
        android:orientation="vertical">

        <TextView
            android:id="@+id/requestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя заявки"
            android:textSize="@dimen/primaryTextSize"
            android:textColor="?textColor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/requestText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginEnd="64dp"
            android:text="Очень длинный текст заявки который придумал пользователь просто так для теста. Тут простой набор букв безсмысленного значения"
            android:textSize="@dimen/secondaryTextSizeSmall"
            android:layout_marginBottom="@dimen/contentMargin"
            android:textColor="?textColorDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата создания"
                android:textSize="@dimen/tipsTextSize"
                android:textColor="?colorPrimaryDark"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/requestTimeDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20.20.2002"
                android:textSize="@dimen/tipsTextSize"
                android:textColor="?textColorDark"
                android:gravity="end"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/requestTimeDeadlineProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:progress="32"
            android:progressTint="?colorPrimaryDark"
            android:backgroundTint="?disabledColor"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/requestTimeCreation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.20.2002"
                android:textSize="@dimen/tipsTextSize"
                android:textColor="?textColorDark"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дедлайн"
                android:textSize="@dimen/tipsTextSize"
                android:textColor="#DF0000"
                android:gravity="end"/>
        </LinearLayout>




    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>