<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/contentMargin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/imagePickerDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?textColor"
        android:textSize="@dimen/primaryTextSizeLarge"
        android:text="Выберите изображение"
        android:textStyle="bold"
        android:maxLines="2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagePickerRecycler"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:itemCount="20"
        tools:listitem="@layout/imagepicker_item_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <LinearLayout
        android:id="@+id/imagePickerDialogButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="@dimen/contentMarginHalf"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/imagePickerDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_disable"
            android:textSize="@dimen/primaryTextSize"
            android:text="Отмена"
            android:padding="@dimen/contentMarginHalf"
            android:layout_marginEnd="@dimen/contentMargin"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/imagePickerDialogDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimaryDark"
            android:padding="@dimen/contentMarginHalf"
            android:layout_marginEnd="@dimen/contentMargin"
            android:textSize="@dimen/primaryTextSize"
            android:text="Готово"
            android:textStyle="bold"
            android:maxLines="2"/>
    </LinearLayout>

</LinearLayout>