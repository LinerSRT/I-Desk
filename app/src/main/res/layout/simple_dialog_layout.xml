<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/contentMargin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/simpleDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?textColor"
        android:textSize="@dimen/primaryTextSizeLarge"
        android:textStyle="bold"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/simpleDialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentMarginHalf"
        android:layout_marginBottom="@dimen/contentMarginHalf"
        android:textColor="?textColorDark"
        android:textSize="@dimen/secondaryTextSize"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="64dp"/>

    <LinearLayout
        android:id="@+id/simpleDialogButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="@dimen/contentMarginHalf"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/simpleDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_disable"
            android:textSize="@dimen/primaryTextSize"
            android:padding="@dimen/contentMarginHalf"
            android:layout_marginEnd="@dimen/contentMargin"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/simpleDialogDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimaryDark"
            android:padding="@dimen/contentMarginHalf"
            android:layout_marginEnd="@dimen/contentMargin"
            android:textSize="@dimen/primaryTextSize"
            android:textStyle="bold"
            android:maxLines="2"/>
    </LinearLayout>

</LinearLayout>