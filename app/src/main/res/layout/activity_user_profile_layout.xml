<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimaryDark"
        app:title="Профиль"
        app:titleTextColor="#fff" />

    <com.roacult.backdrop.BackdropLayout
        android:id="@+id/profileBackdropLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:back_layout="@id/includedBack"
        app:disable_when_open="true"
        app:front_layout="@id/includedFront"
        app:menuDrawable="@drawable/menu_icon"
        app:peekHeight="100dp"
        app:toolbarId="@id/toolbar">

        <LinearLayout
            android:id="@+id/includedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/contentMarginHalf">

            <LinearLayout
                android:id="@+id/profileLayoutToRequestList"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/contentMarginHalf"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/color_primary"
                    android:src="@drawable/request_list_icon" />

                <com.liner.views.YSTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заявки"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondaryTextSize"
                    app:ys_type="Light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileLayoutToAddRequest"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/contentMarginHalf"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/color_primary"
                    android:src="@drawable/add_request" />

                <com.liner.views.YSTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Создать заявку"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondaryTextSize"
                    app:ys_type="Light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/contentMarginHalf"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/color_primary"
                    android:src="@drawable/profile_icon" />

                <com.liner.views.YSTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Профиль"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondaryTextSize"
                    app:ys_type="Light" />
            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/profile_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.roacult.backdrop.BackdropLayout>
</LinearLayout>