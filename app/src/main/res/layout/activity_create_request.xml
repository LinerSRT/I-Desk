<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".UI.CreateRequestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appBarHeight"
        android:background="@drawable/round_corner_bottom"
        android:elevation="@dimen/cardElevation"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/closeRequestCreatingActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/close_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/contentMargin"
            android:paddingEnd="@dimen/contentMargin"
            android:text="Отмена"
            android:textColor="@color/color_white"
            android:textSize="@dimen/primaryTextSize" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/doneRequestCreatingActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/done_icon_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/contentMargin"
            android:paddingEnd="@dimen/contentMargin"
            android:text="Готово"
            android:textColor="@color/color_white"
            android:textSize="@dimen/primaryTextSize"
            android:textStyle="bold" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardsCornerRadius"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/contentMargin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/content_icon"
                android:gravity="center"
                android:text="Заголовок"
                android:textColor="?textColorDark"
                android:textSize="@dimen/tipsTextSize"
                android:textStyle="bold" />

            <com.liner.i_desk.Utils.Views.EditRegexTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentMargin"
                android:hint="Введите текст"
                android:textColor="?textColor"
                android:textSize="@dimen/secondaryTextSize"
                app:ertv_regex=".{1,}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/content_icon"
                android:gravity="center"
                android:text="Краткое описание"
                android:textColor="?textColorDark"
                android:textSize="@dimen/tipsTextSize"
                android:textStyle="bold" />

            <com.liner.i_desk.Utils.Views.EditRegexTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentMargin"
                android:hint="Введите текст"
                android:textColor="?textColor"
                android:textSize="@dimen/secondaryTextSize"
                app:ertv_regex=".{1,}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/content_icon"
                android:gravity="center"
                android:text="Описание"
                android:textColor="?textColorDark"
                android:textSize="@dimen/tipsTextSize"
                android:textStyle="bold" />

            <com.liner.i_desk.Utils.Views.EditRegexTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentMargin"
                android:hint="Введите текст"
                android:textColor="?textColor"
                android:textSize="@dimen/secondaryTextSize"
                app:ertv_regex=".{1,}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <co.lujun.androidtagview.TagContainerLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="10dp"
                    app:vertical_interval="10dp"
                    app:tag_clickable="true"
                    app:tag_theme="pure_teal" />


                <TextView
                    android:id="@+id/createRequestDeadlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/time_icon"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="?textColorDark"
                    android:textSize="@dimen/tipsTextSize"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createRequestFilePickerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/attach_file"
                    android:gravity="center"
                    android:padding="@dimen/contentMarginHalf"
                    android:text="Прикрепить файл"
                    android:textColor="?textColor"
                    android:textSize="@dimen/secondaryTextSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/createRequestDeadlineView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/time_icon"
                    android:gravity="center"
                    android:padding="@dimen/contentMarginHalf"
                    android:text="Указать дедлайн"
                    android:textColor="?textColor"
                    android:textSize="@dimen/secondaryTextSize" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>