<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?backgroundColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appBarHeight"
        android:background="@drawable/round_corner_bottom"
        android:elevation="@dimen/cardElevation"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/accountActionsAddNewRequest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Создать заявку"
            android:layout_marginStart="@dimen/contentMargin"
            android:paddingEnd="@dimen/contentMarginHalf"
            android:drawableStart="@drawable/add_request"
            android:textColor="@color/color_white"
            android:textSize="@dimen/primaryTextSize" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardBackgroundColor="?colorPrimary"
            android:layout_marginEnd="@dimen/contentMarginHalf"
            app:cardCornerRadius="@dimen/cardsCornerRadius"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="@dimen/contentMarginHalf">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/contentMargin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/primaryTextSize"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/userType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/contentMarginHalf"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tipsTextSize" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="@dimen/contentHeight"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/temp_user_photo"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="1dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/requestRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshColor="?colorPrimary"
        app:refreshType="smartisan">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requestRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/request_item_holder"/>


    </com.baoyz.widget.PullRefreshLayout>


</LinearLayout>