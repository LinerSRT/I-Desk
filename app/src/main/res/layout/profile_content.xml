<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/includedFront"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/round_corner_background_top"
    app:maskColor="@color/white_five"
    app:shimmerColor="@color/color_disable"
    app:showShimmer="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:id="@+id/fadingEdgeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fel_edge="bottom|top"
                    app:fel_size_bottom="32dp"
                    app:fel_size_top="32dp">

                    <com.liner.views.BlurredImageView
                        android:id="@+id/profileLayoutBlurredUserPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/temp_user_photo" />


                </com.bosphere.fadingedgelayout.FadingEdgeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileLayoutUserPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/temp_user_photo" />

                <com.liner.views.YSTextView
                    android:id="@+id/profileLayoutUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLayoutUserPhoto"
                    android:layout_centerInParent="true"
                    android:shadowColor="#383838"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="asdassdasdasdasd"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:ys_type="Bold" />

                <com.liner.views.YSTextView
                    android:id="@+id/profileLayoutUserType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLayoutUserName"
                    android:layout_centerInParent="true"
                    android:shadowColor="#383838"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="asdassdasdasdasd"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/secondaryTextSize"
                    app:ys_type="Thin" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/userAboutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/contentMarginHalf"
                android:layout_marginTop="64dp"
                android:background="@drawable/background"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/contentMarginHalf"
                app:layout_constraintTop_toBottomOf="@+id/relative"
                tools:layout_editor_absoluteX="8dp">

                <com.liner.views.YSTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/contentMarginHalf"
                    android:text="О себе"
                    android:textColor="#383838"
                    android:textSize="@dimen/primaryTextSize"
                    app:ys_type="Bold" />

                <com.liner.views.YSTextView
                    android:id="@+id/profileLayoutUserAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/contentMarginHalf"
                    android:maxLines="8"
                    android:text="Информация о себе не указана"
                    android:textColor="#383838"
                    android:textSize="@dimen/secondaryTextSize"
                    app:ys_type="Light" />

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/profileLayoutUserAboutExpandLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:el_duration="400"
                    app:el_expanded="false"
                    app:el_parallax="100">

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/profileLayoutUserAboutEditBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fui_idp_button_background_google"
                        android:elevation="2dp"
                        android:paddingStart="@dimen/contentMarginHalf"
                        android:paddingEnd="@dimen/contentMarginHalf"
                        app:alwaysShowHint="false"
                        app:endIcon="@drawable/done_icon"
                        app:errorColor="@color/color_warning_red"
                        app:hasClearButton="false"
                        app:helperText="Напишите кратко о себе"
                        app:helperTextColor="?textColorDark"
                        app:maxCharacters="150"
                        app:panelBackgroundColor="@color/white"
                        app:primaryColor="?colorPrimaryDark"
                        app:useDenseSpacing="true">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/profileLayoutUserAboutEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/secondaryTextSize" />

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/contentMarginHalf"
                android:background="@drawable/background"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="@dimen/contentMarginHalf"
                app:layout_constraintTop_toBottomOf="@+id/userAboutLayout"
                tools:layout_editor_absoluteX="8dp">

                <com.liner.views.YSTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/contentMarginHalf"
                    android:text="Информация"
                    android:textColor="#383838"
                    android:textSize="@dimen/primaryTextSize"
                    app:ys_type="Bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profileLayoutInformationRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never" />
            </LinearLayout>

            <com.liner.views.FileListLayoutView
                android:id="@+id/fileListLayoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/profileLayoutSignOut"
                style="@style/AppTheme.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/sighout_icon"
                android:text="Выйти"
                android:textColor="#383838"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.faltenreich.skeletonlayout.SkeletonLayout>