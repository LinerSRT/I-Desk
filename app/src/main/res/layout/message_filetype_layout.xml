<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/background_round"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/messageFileTypeIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/file_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/contentMarginHalf"
        android:layout_marginEnd="@dimen/contentMarginHalf"
        android:orientation="vertical">


        <TextView
            android:id="@+id/messageFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="@dimen/tipsTextSize"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/messageFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/tipsTextSize"
            />

    </LinearLayout>



    <com.liner.views.CircleProgressBar
        android:id="@+id/fileDownloadBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_round"
        app:progress="10"
        app:progressMax="100"
        app:progressBarIconPadding="8dp"
        app:progressMin="0"
        app:progressBarPadding="2dp"
        app:progressBarColor="?colorPrimaryDark"
        app:progressBarThickness="4dp"
        android:visibility="visible" />

</LinearLayout>