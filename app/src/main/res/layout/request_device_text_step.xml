<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/requestDeviceTextStepBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fui_idp_button_background_google"
        android:elevation="2dp"
        android:paddingStart="@dimen/contentMarginHalf"
        android:paddingEnd="@dimen/contentMarginHalf"
        app:alwaysShowHint="false"
        app:errorColor="@color/color_warning_red"
        app:hasClearButton="true"
        app:helperText="Введите текст заявки"
        app:helperTextColor="?textColorDark"
        app:minCharacters="10"
        app:panelBackgroundColor="@color/white"
        app:primaryColor="?colorPrimaryDark"
        app:useDenseSpacing="true">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/requestDeviceTextStepEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondaryTextSize" />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
</RelativeLayout>